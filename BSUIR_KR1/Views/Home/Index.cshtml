@{
    ViewData["Title"] = "Контрольная работа №1";
}

<h1 class="fw-bold mb-4">@ViewData["Title"]</h1>

<form method="post">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-11">
            <div class="mb-3">
                <select class="form-select" id="item1" name="item1">
                    <option>Item 1</option>
                    <option>Item 2</option>
                    <option>Item 3</option>
                </select>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkbox1" id="checkbox1">
                    <label class="form-check-label" for="checkbox1">Чек-бокс 1</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="checkbox2" id="checkbox2">
                    <label class="form-check-label" for="checkbox2">Чек-бокс 2</label>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="radio" id="radio1" value="1" checked>
                    <label class="form-check-label" for="radio1">Радио-1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="radio" id="radio2" value="2">
                    <label class="form-check-label" for="radio2">Радио-2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="radio" id="radio3" value="3">
                    <label class="form-check-label" for="radio3">Радио-3</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-1 text-end">
            <label for="login" class="form-label">Логин:</label>
        </div>
        <div class="col-11">
            <input type="email" class="form-control" id="login" name="login" value="user@mail.ru">
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-1 text-end">
            <label for="password" class="form-label">Пароль:</label>
        </div>
        <div class="col-11">
            <input type="password" class="form-control" id="password" name="password">
        </div>
    </div>

    <div class="row">
        <div class="col-1">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    </div>
</form>